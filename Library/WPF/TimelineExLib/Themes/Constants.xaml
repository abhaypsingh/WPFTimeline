<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    xmlns:timeline="clr-namespace:TimelineLibrary;assembly=TimelineLibrary"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--<timeline:NullToUnsetConverter
        x:Key="NullToUnsetConverter"></timeline:NullToUnsetConverter>-->
    
    <!-- Tooltip resources -->

    <SolidColorBrush
        x:Key="EventTooltipBackground">#FF2D2D2D</SolidColorBrush>

    <SolidColorBrush
        x:Key="EventTooltipTitleForeground">White</SolidColorBrush>
    
    <SolidColorBrush
        x:Key="EventTooltipDescriptionForeground">Silver</SolidColorBrush>
    
    <s:Int32
        x:Key="TooltipTimeout">60</s:Int32>

    <SolidColorBrush
        Color="White"
        x:Key="BandEventTitleForeground" />

    <SolidColorBrush
        Color="Silver"
        x:Key="BandTeaserForeground" />

    <SolidColorBrush
        Color="#FF2F2F2F"
        x:Key="ItemBackground" />

    <SolidColorBrush
        Color="#FF2F2F2F"
        x:Key="EventBackground" />

    <SolidColorBrush
        Color="#012F2F2F"
        x:Key="EventToolsBackground" />


    <SolidColorBrush
        Color="White"
        x:Key="ItemForeground" />

    <SolidColorBrush
        Color="#FF444444"
        x:Key="ItemLineBrush" />

    <SolidColorBrush
        Color="#FF666666"
        x:Key="EventBorderLineBrush" />

    <SolidColorBrush
        Color="#5B595959"
        x:Key="BandVisibleWindowBackground" />

    <Color
        x:Key="NavigateButtonNormalBackground">#FF444444</Color>

    <Color
        x:Key="NavigateButtonMouseOverBackground">#FFBDBDBD</Color>

    <SolidColorBrush
        Color="#FF7A7A7A"
        x:Key="NavigateButtonBaseBackground" />

    <SolidColorBrush
        Color="#FFBDBDBD"
        x:Key="NavigateButtonBaseStroke" />

</ResourceDictionary>
