<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="/TimelineLibrary;Component/Themes/Constants.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="NavigateButtonBaseStyle"
        TargetType="Path">
        <Setter
            Property="Fill"
            Value="{StaticResource NavigateButtonBaseBackground}" />
        <Setter
            Property="Stretch"
            Value="Fill" />
        <Setter
            Property="Stroke"
            Value="{StaticResource NavigateButtonBaseStroke}" />
        <Setter
            Property="StrokeEndLineCap"
            Value="Round" />
        <Setter
            Property="StrokeLineJoin"
            Value="Round" />
        <Setter
            Property="StrokeStartLineCap"
            Value="Round" />
        <Setter
            Property="Margin"
            Value="0" />
        <Setter
            Property="Width"
            Value="8" />
        <Setter
            Property="Height"
            Value="20" />
    </Style>

    <Style
        x:Key="NavigateLeftButtonStyle"
        TargetType="Button">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="Button">
                    <Grid
                        Height="20"
                        Width="10">
                        <Path
                            x:Name="path"
                            Style="{StaticResource NavigateButtonBaseStyle}"
                            Data="M8.166667,1.9166666 L8.2496672,29.833 L1.9163154,16.08317 z" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="NavigateRightButtonStype"
        TargetType="Button">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate
                    TargetType="Button">
                    <Grid
                        Width="10"
                        Height="20">
                        <Path
                            x:Name="path"
                            Style="{StaticResource NavigateButtonBaseStyle}"
                            Data="M1.3125,1.4375 L1.5004997,30.2495 L10.937987,14.9995 z" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>