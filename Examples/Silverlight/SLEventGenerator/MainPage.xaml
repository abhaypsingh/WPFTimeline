<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:TimelineLibrary="clr-namespace:TimelineLibrary;assembly=TimelineLibrary"
    x:Class="SLEventGenerator.MainPage"
    TextOptions.TextHintingMode="Animated"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="UserControl_Loaded">

    <Grid
        x:Name="LayoutRoot"
        Background="White">
        
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel
            Orientation="Horizontal"
            Margin="5">
            
            <Button
                x:Name="GenerateBtn"
                Content="Generate Events"
                Margin="0,0,5,0"
                Click="GenerateBtn_Click" />
            
            <Button
                x:Name="ClearBtn"
                Content="Clear"
                Margin="0,0,5,0"
                Click="ClearBtn_Click" />
            
        </StackPanel>
        
        <TimelineLibrary:TimelineTray
            x:Name="EventTLT"
            Grid.Row="1"
            CalendarType="persian"
            Margin="0,5,0,0">
            
            <TimelineLibrary:TimelineTray.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="40" />
            </TimelineLibrary:TimelineTray.RowDefinitions>

            <TimelineLibrary:TimelineBand
                Grid.Row="0"
                IsMainBand="True"
                x:Name="EventTLB"
                MaxEventHeight="100" />
            
            <TimelineLibrary:TimelineBand
                Grid.Row="1"
                x:Name="EventScaleTLB"
                MaxEventHeight="5" />
            
        </TimelineLibrary:TimelineTray>
    </Grid>
</UserControl>
